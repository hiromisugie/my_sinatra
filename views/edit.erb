<p>メモの変更</p>

<% @detail_memos.map do |memo| %>
<% if memo.has_value?(@path) %>
<form method="post" action="/edit/<%= @path %>">
  <input type="text" name="memo_title" value="<%= memo["title"] %>" required><br/>
  <textarea name="memo_text" required><%= memo["body"] %></textarea><br/>
  <input type="submit" value="変更">
</form>
<% end %>
<% end %>

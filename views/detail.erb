
<% @detail_memos.map do |memo| %>
<% if memo.has_value?(@path) %>
    <div class="mb-4">
        <p class="font-semibold mb-2">タイトル</p>
        <div class="w-full mb-4 p-4 bg-neutral-200"><%= memo["title"] %></div>
    </div>
    <div class="mb-16">
        <p class="font-semibold mb-2">本文</p>
        <div class="w-full mb-4 p-4 bg-neutral-200"><%= memo["body"].gsub(/\n/, '<br/>') %></div>

    </div>
<% end %>
<% end %>

<button><a class="bg-indigo-700 font-semibold text-white py-2 px-4 rounded mr-4" href="/edit/<%= @path %>">編集</a></button>
<button><a class="bg-neutral-500 font-semibold text-white py-2 px-4 rounded" href="/delete/<%= @path %>">削除</a></button>

